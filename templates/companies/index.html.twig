{% extends 'base.html.twig' %}

{% block title %}Firmalar{% endblock %}

{% block stylesheets %}
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
  <script>
    tailwind = window.tailwind || {}; tailwind.config = { darkMode: 'class', theme: { extend: { colors: { primary: '#d91e36','background-light':'#f6f7f8','background-dark':'#101c22'}, fontFamily: { display: ['Newsreader'] } } } };
  </script>
  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
{% endblock %}

{% block body %}
<header class="flex items-center justify-between whitespace-nowrap border-b border-slate-200 px-10 py-4">
    <div class="flex items-center gap-8">
      <div class="flex items-center">
        <img src="{{ asset('logo.png') }}" alt="Sanayi Birliği" class="w-40 md:w-52 h-auto max-h-20 md:max-h-24 object-contain shrink-0" />
      </div>
      <nav class="hidden md:flex items-center gap-6">
        <a class="text-sm font-medium hover:text-primary" href="{{ path('public_news_index') }}">Haberler</a>
        <a class="text-sm font-medium hover:text-primary" href="{{ path('public_blog_index') }}">Bloglar</a>
        <a class="text-sm font-medium text-primary" href="{{ path('public_companies_index') }}">Firmalar</a>
      </nav>
    </div>
    <div class="flex items-center gap-4">
      <div class="relative hidden sm:block">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-500">search</span>
        <input class="form-input w-48 rounded-lg border-slate-300 bg-background-light py-2 pl-10 pr-4 text-sm focus:border-primary focus:ring-primary" placeholder="Firmalarda ara" />
      </div>
    </div>
</header>

<main class="container mx-auto px-4 py-8 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-5xl">
    <h1 class="text-4xl font-bold tracking-tight text-primary">Firmalar</h1>

    <div class="mt-6 flex flex-wrap items-center gap-2">
      <a href="{{ path('public_companies_index') }}" class="rounded-full px-4 py-2 text-sm font-medium {{ not category ? 'bg-primary text-white' : 'bg-slate-200/80 text-slate-700 hover:bg-primary/20' }}">Tümü</a>
      {% for cat in categories %}
        <a href="{{ path('public_companies_index', {category: cat}) }}" class="rounded-full px-4 py-2 text-sm font-medium {{ category == cat ? 'bg-primary text-white' : 'bg-slate-200/80 text-slate-700 hover:bg-primary/20' }}">{{ cat }}</a>
      {% endfor %}
    </div>

    <section class="mt-12">
      <h2 class="text-2xl font-bold text-primary">Tüm Firmalar</h2>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
        {% for c in items %}
        <div class="group relative flex items-center gap-6 rounded-lg border border-slate-200 bg-white p-6 shadow-sm transition-all duration-300 hover:shadow-lg hover:scale-[1.02]">
          <div class="h-20 w-20 flex-shrink-0 overflow-hidden rounded-xl bg-gray-50 flex items-center justify-center p-3">
            {% if c.filePath %}
              <img alt="{{ c.name }}" class="h-full w-full object-contain object-center" src="{{ asset(c.filePath) }}" />
            {% else %}
              <span class="material-symbols-outlined text-gray-400 text-3xl">business</span>
            {% endif %}
          </div>
          <div class="flex-1 min-w-0">
            {% if c.category %}
              <span class="inline-block px-2 py-1 bg-primary/10 text-primary text-xs font-semibold rounded-full mb-2">{{ c.category }}</span>
            {% endif %}
            <h3 class="text-lg font-semibold text-gray-900 mb-1">{{ c.name }}</h3>
            {% if c.description %}
              <p class="text-sm text-gray-600 leading-relaxed line-clamp-2">{{ c.description }}</p>
            {% endif %}
          </div>
        </div>
        {% else %}
          <div class="col-span-3 text-center text-slate-500 py-12">
            <span class="material-symbols-outlined text-4xl mb-4 block">business</span>
            <p class="text-lg">Bu kategoride firma bulunamadı.</p>
          </div>
        {% endfor %}
      </div>

      {% if totalPages > 1 %}
      <div class="flex items-center justify-center gap-2 pt-8">
        <a class="flex size-10 items-center justify-center rounded-lg text-slate-600 hover:bg-primary/10 hover:text-primary transition-colors" href="{{ path('public_companies_index', {page: page > 1 ? page - 1 : 1, category: category}) }}"><span class="material-symbols-outlined">chevron_left</span></a>
        <span class="flex size-10 items-center justify-center rounded-lg text-sm font-bold bg-primary text-white">{{ page }}</span>
        <a class="flex size-10 items-center justify-center rounded-lg text-slate-600 hover:bg-primary/10 hover:text-primary transition-colors" href="{{ path('public_companies_index', {page: page < totalPages ? page + 1 : totalPages, category: category}) }}"><span class="material-symbols-outlined">chevron_right</span></a>
      </div>
      {% endif %}
    </section>
  </div>
</main>
{% endblock %}


