{% extends 'base.html.twig' %}

{% block title %}Şirketler{% endblock %}

{% block stylesheets %}
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <script>
    tailwind = window.tailwind || {}; tailwind.config = { darkMode: 'class', theme: { extend: { colors: { primary: '#d91e36','background-light':'#f6f7f8','background-dark':'#101c22'}, fontFamily: { display: ['Newsreader'] } } } };
  </script>
{% endblock %}

{% block body %}
<header class="border-b border-slate-200">
  <div class="container mx-auto flex items-center justify-between whitespace-nowrap px-4 py-3">
    <div class="flex items-center gap-8">
      <div class="flex items-center gap-2">
        <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg"><path clip-rule="evenodd" d="M24 4H6V17.3333V30.6667H24V44H42V30.6667V17.3333H24V4Z" fill="currentColor" fill-rule="evenodd"></path></svg>
        <h2 class="text-xl font-bold">Sanayi Birliği</h2>
      </div>
      <nav class="hidden md:flex items-center gap-6">
        <a class="text-sm font-medium hover:text-primary" href="{{ path('public_news_index') }}">News</a>
        <a class="text-sm font-medium hover:text-primary" href="{{ path('public_blog_index') }}">Posts</a>
        <a class="text-sm font-medium text-primary" href="{{ path('public_companies_index') }}">Şirketler</a>
      </nav>
    </div>
    <div class="flex items-center gap-4">
      <div class="relative hidden sm:block">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-500">search</span>
        <input class="form-input w-full rounded-full border-slate-300 bg-background-light py-2 pl-10 pr-4 text-sm focus:border-primary focus:ring-primary" placeholder="Search" />
      </div>
    </div>
  </div>
</header>

<main class="container mx-auto px-4 py-8 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-5xl">
    <h1 class="text-4xl font-bold tracking-tight text-primary">Şirketler</h1>

    <div class="mt-6 flex flex-wrap items-center gap-2">
      <a href="{{ path('public_companies_index') }}" class="rounded-full px-4 py-2 text-sm font-medium {{ not category ? 'bg-primary text-white' : 'bg-slate-200/80 text-slate-700 hover:bg-primary/20' }}">Tümü</a>
      {% for cat in categories %}
        <a href="{{ path('public_companies_index', {category: cat}) }}" class="rounded-full px-4 py-2 text-sm font-medium {{ category == cat ? 'bg-primary text-white' : 'bg-slate-200/80 text-slate-700 hover:bg-primary/20' }}">{{ cat }}</a>
      {% endfor %}
    </div>

    <section class="mt-12">
      <h2 class="text-2xl font-bold text-primary">Tüm Şirketler</h2>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
        {% for c in items %}
        <div class="group relative flex items-center gap-4 rounded-lg border border-slate-200 bg-white p-4">
          <div class="h-16 w-16 flex-shrink-0 overflow-hidden rounded-lg bg-slate-200">
            {% if c.filePath %}<img alt="{{ c.name }}" class="h-full w-full object-cover object-center" src="{{ asset(c.filePath) }}" />{% endif %}
          </div>
          <div>
            <h3 class="text-base font-semibold">{{ c.name }}</h3>
            <p class="mt-1 text-sm text-slate-500">{{ c.category }}</p>
          </div>
        </div>
        {% else %}
          <div class="col-span-3 text-slate-500">Kayıt bulunamadı.</div>
        {% endfor %}
      </div>

      {% if totalPages > 1 %}
      <div class="flex items-center justify-center gap-2 pt-8">
        <a class="flex size-10 items-center justify-center rounded-lg text-slate-600 hover:bg-primary/10 hover:text-primary transition-colors" href="{{ path('public_companies_index', {page: page > 1 ? page - 1 : 1, category: category}) }}"><span class="material-symbols-outlined">chevron_left</span></a>
        <span class="flex size-10 items-center justify-center rounded-lg text-sm font-bold bg-primary text-white">{{ page }}</span>
        <a class="flex size-10 items-center justify-center rounded-lg text-slate-600 hover:bg-primary/10 hover:text-primary transition-colors" href="{{ path('public_companies_index', {page: page < totalPages ? page + 1 : totalPages, category: category}) }}"><span class="material-symbols-outlined">chevron_right</span></a>
      </div>
      {% endif %}
    </section>
  </div>
</main>
{% endblock %}


