{% extends 'admin/layout.html.twig' %}

{% block admin_content %}
    <div class="admin-header">
        <h2 style="margin:0">Yönetim Paneli</h2>
        <div class="toolbar">
            <a class="btn" href="{{ path('admin_blog_new') }}">Yeni Blog Yazısı</a>
            <a class="btn flat" href="{{ path('admin_blog_index') }}">Blogları Yönet</a>
        </div>
    </div>
    <div class="cards">
        <div class="card span-12" style="display:grid; grid-template-columns: repeat(12, 1fr); gap: 16px;">
            <div class="card" style="grid-column: span 3;">
                <div style="font-weight:600; margin-bottom:8px;">Blog</div>
                <div class="toolbar">
                    <a class="btn" href="{{ path('admin_blog_new') }}">Yeni</a>
                    <a class="btn secondary" href="{{ path('admin_blog_index') }}">Liste</a>
                </div>
            </div>
            <div class="card" style="grid-column: span 3;">
                <div style="font-weight:600; margin-bottom:8px;">Haberler</div>
                <div class="toolbar">
                    <a class="btn" href="{{ path('admin_news_new') }}">Yeni</a>
                    <a class="btn secondary" href="{{ path('admin_news_index') }}">Liste</a>
                </div>
            </div>
            <div class="card" style="grid-column: span 3;">
                <div style="font-weight:600; margin-bottom:8px;">Firmalar</div>
                <div class="toolbar">
                    <a class="btn" href="{{ path('admin_companies_new') }}">Yeni</a>
                    <a class="btn secondary" href="{{ path('admin_companies_index') }}">Liste</a>
                </div>
            </div>
            <div class="card" style="grid-column: span 3;">
                <div style="font-weight:600; margin-bottom:8px;">Kullanıcılar</div>
                <div class="toolbar">
                    <a class="btn" href="{{ path('admin_users_new') }}">Yeni</a>
                    <a class="btn secondary" href="{{ path('admin_users_index') }}">Liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


