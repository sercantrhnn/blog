{% extends 'base.html.twig' %}

{% block title %}{{ item.title }} | Haber{% endblock %}

{% block stylesheets %}
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="relative flex min-h-screen w-full flex-col">
  <header class="sticky top-0 z-10 w-full bg-background-light/80 backdrop-blur-sm border-b border-gray-200">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <div class="flex items-center">
          <img src="{{ asset('logo.png') }}" alt="Sanayi Birliği" class="w-40 md:w-52 h-auto max-h-20 md:max-h-24 object-contain shrink-0" />
        </div>
        <nav class="hidden md:flex items-center gap-8">
          <a class="text-sm font-medium hover:text-red-600" href="{{ path('home_index') }}">Home</a>
          <a class="text-sm font-medium hover:text-red-600" href="{{ path('public_news_index') }}">Haberler</a>
        </nav>
      </div>
    </div>
  </header>

  <main class="container mx-auto flex-grow px-4 sm:px-6 lg:px-8 py-8">
    <div class="mx-auto max-w-4xl">
      <div class="mb-6">
        <p class="text-sm text-gray-500">
          <a class="hover:text-red-600" href="{{ path('public_news_index') }}">News</a>
          <span class="mx-1">/</span>
          <span>{{ item.category ?? 'Genel' }}</span>
        </p>
      </div>

      <article>
        <header class="mb-8">
          <h1 class="text-4xl lg:text-5xl font-extrabold tracking-tight text-red-600 mb-4">{{ item.title }}</h1>
        </header>
        {% if item.filePath %}
        <div class="mb-8 overflow-hidden rounded-lg">
          <img alt="{{ item.title }}" class="w-full h-auto object-cover" src="{{ asset(item.filePath) }}" />
        </div>
        {% endif %}
        <div class="prose prose-lg max-w-none text-gray-700">
          {{ item.post|raw }}
        </div>
      </article>

      {% if related|length > 0 %}
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">İlgili Haberler</h2>
        <div class="grid md:grid-cols-2 gap-8">
          {% for r in related %}
          <a class="flex flex-col rounded-lg overflow-hidden bg-white border border-gray-200" href="{{ path('public_news_show', {id: r.id}) }}">
            <div class="w-full h-48 bg-center bg-cover" style="background-image:url('{{ r.filePath ? asset(r.filePath) : '' }}');"></div>
            <div class="p-6 flex flex-col flex-grow">
              {% if r.category %}<p class="text-sm text-red-600 font-semibold mb-1">{{ r.category }}</p>{% endif %}
              <h3 class="text-xl font-bold text-gray-900 mb-2">{{ r.title }}</h3>
              <p class="text-gray-600 flex-grow">{{ r.description }}</p>
            </div>
          </a>
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </div>
  </main>
</div>
{% endblock %}


