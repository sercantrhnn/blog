{% extends 'base.html.twig' %}

{% block title %}Haberler{% endblock %}

{% block stylesheets %}
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <script id="tailwind-config">
    tailwind = window.tailwind || {}; tailwind.config = { darkMode: 'class', theme: { extend: { colors: { primary: '#DC2626','background-light':'#f6f7f8','background-dark':'#101c22'}, fontFamily: { display: ['Newsreader'] } } } };
  </script>
{% endblock %}

{% block body %}
<div class="flex flex-col min-h-screen">
  <header class="flex items-center justify-between whitespace-nowrap border-b border-gray-200 px-10 py-4">
        <div class="flex items-center gap-8">
          <div class="flex items-center gap-2 text-primary">
            <svg class="h-8 w-8 text-red-600" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 2L2 7l10 5 10-5-10-5zm0 7.5L4 14l8 4.5 8-4.5-8-4.5zM2 17l10 5 10-5-10-5-10 5z"></path></svg>
            <h1 class="text-2xl font-bold text-gray-900">Sanayi Birliği</h1>
          </div>
          <nav class="hidden md:flex items-center gap-6">
            <a class="text-sm font-medium text-gray-600 hover:text-primary transition-colors" href="{{ path('home_index') }}">Ana Sayfa</a>
            <a class="text-sm font-medium text-primary" href="{{ path('public_news_index') }}">Haberler</a>
            <a class="text-sm font-medium text-gray-600 hover:text-primary transition-colors" href="{{ path('public_blog_index') }}">Bloglar</a>
            <a class="text-sm font-medium text-gray-600 hover:text-primary transition-colors" href="{{ path('public_companies_index') }}">Firmalar</a>
          </nav>
        </div>
        <div class="flex items-center gap-4">
          <div class="relative hidden sm:block">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">search</span>
            <input class="form-input w-48 rounded-lg border-gray-200 bg-white/50 pl-10 pr-4 py-2 text-sm placeholder:text-gray-400 focus:border-primary focus:ring-primary" placeholder="Haberlerde ara" value="" />
          </div>
        </div>
  </header>

  <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
        <h2 class="text-4xl font-bold text-gray-900">Haberler</h2>
        <div class="relative sm:hidden w-full">
          <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">search</span>
          <input class="form-input w-full rounded-lg border-gray-200 bg-white/50 pl-10 pr-4 py-3 text-sm placeholder:text-gray-400 focus:border-primary focus:ring-primary" placeholder="Haberlerde ara" value="" />
        </div>
      </div>

      <div class="mb-6 flex flex-wrap gap-2">
        <a href="{{ path('public_news_index') }}" class="px-4 py-2 text-sm font-medium rounded-lg {{ not category ? 'bg-primary text-white' : 'bg-gray-200 text-gray-700' }}">All</a>
        {% for cat in categories %}
          <a href="{{ path('public_news_index', {category: cat}) }}" class="px-4 py-2 text-sm font-medium rounded-lg {{ category == cat ? 'bg-primary text-white' : 'bg-gray-200 text-gray-700 hover:bg-red-600/20 hover:text-primary' }} transition-colors">{{ cat }}</a>
        {% endfor %}
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {% for n in items %}
        <a class="flex flex-col group" href="{{ path('public_news_show', {id: n.id}) }}">
          <div class="relative">
            <div class="w-full aspect-video bg-cover bg-center rounded-lg mb-3" style="background-image:url('{{ n.filePath ? asset(n.filePath) : '' }}');"></div>
            <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg"></div>
          </div>
          <p class="text-base font-medium text-gray-800 group-hover:text-primary transition-colors">{{ n.title }}</p>
        </a>
        {% else %}
          <div class="col-span-4 text-gray-500">Kayıt bulunamadı.</div>
        {% endfor %}
      </div>

      {% if totalPages > 1 %}
      <div class="flex items-center justify-center gap-2 pt-8">
        <a class="flex size-10 items-center justify-center rounded-lg text-gray-600 hover:bg-primary/10 hover:text-primary transition-colors" href="{{ path('public_news_index', {page: page > 1 ? page - 1 : 1, category: category}) }}"><span class="material-symbols-outlined">chevron_left</span></a>
        <span class="flex size-10 items-center justify-center rounded-lg text-sm font-bold bg-primary text-white">{{ page }}</span>
        <a class="flex size-10 items-center justify-center rounded-lg text-gray-600 hover:bg-primary/10 hover:text-primary transition-colors" href="{{ path('public_news_index', {page: page < totalPages ? page + 1 : totalPages, category: category}) }}"><span class="material-symbols-outlined">chevron_right</span></a>
      </div>
      {% endif %}
    </div>
  </main>

  <footer class="bg-gray-100 border-t border-gray-200">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 text-center text-sm text-gray-500">
      <p>© 2024 Sanayi Birliği. All rights reserved.</p>
    </div>
  </footer>
</div>
{% endblock %}


